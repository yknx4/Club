<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="@dimen/_0_dimen"
            android:layout_height="wrap_content"
            android:id="@+id/userview_name_textview"
            tools:text="Jorge Figueroa PÃ©rez"
            style="@style/condensed_large"
            android:layout_weight="1"
            android:paddingLeft="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_time"
            android:id="@+id/userview_assist_count_textview"
