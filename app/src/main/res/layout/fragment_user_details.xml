<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingTop="16dp">

        <!--<LinearLayout-->
        <!--android:layout_width="64sp"-->
        <!--android:layout_height="64sp"-->
        <!--android:gravity="center"-->
        <!-->-->
        <!--<ImageView-->
        <!--android:layout_width="48sp"-->
        <!--android:layout_height="48sp"-->

        <!--android:id="@+id/user_row_icon"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/ic_action_person"-->
        <!--/>-->
        <!--</LinearLayout>-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/user_detail_name"
                style="@style/condensed_very_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mariana Alejandra Preciado Martinez"
                tools:text="Person Name" />


            <TextView
                android:id="@+id/user_detail_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="mariana_cma_94@gmail.com"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                tools:text="Email" />

            <TextView
                android:id="@+id/user_detail_campus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Facultad de Psicologia"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                tools:text="University" />


        </LinearLayout>

        <ImageButton

            android:id="@+id/user_detail_close"

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"

            android:src="@drawable/ic_action_about"
            style="?android:attr/borderlessButtonStyle"

            android:contentDescription="@string/ADD_ATTENDANCE"
            />


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/user_detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>