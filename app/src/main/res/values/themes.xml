<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="ClubSelectActionBarTheme"
        parent="@style/Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/HeaderlessActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/HeaderlessActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="HeaderlessActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/club_default</item>
        <item name="android:displayOptions"></item>

        <!-- Support library compatibility --><item name="background">@color/club_default</item>
    </style>


</resources>